<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @house.name %>
</p>

<p>
  <strong>Content:</strong>
  <%= @house.content %>
</p>

<p>
  <strong>Thumb:</strong>
  <% if @house.images.attached? %>
    <% @house.images.each do |image| %>
      <%= image_tag image.variant(resize: "200x400") %> <br>
    <% end %>
  <% end %>
</p>

<p>
  <strong>Status:</strong>
  <%= @house.status %>
</p>

<p>
  <strong>User:</strong>
  <%= link_to @house.user.username,user_path(@house.user.id) %>
</p>

<%= link_to 'Edit', edit_house_path(@house) %> |
<%= link_to 'Back', houses_path %>
